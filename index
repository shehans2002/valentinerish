    button {
        padding: 14px 32px;
        font-size: 18px;
        border: none;
        border-radius: 30px;
        cursor: pointer;
        margin: 12px;
        background: rgba(255,255,255,0.15);
        color: white;
        backdrop-filter: blur(6px);
        transition: 0.3s;
    }

    #yesBtn { background: rgba(255,0,0,0.8); }
    #noBtn { background: rgba(0,0,0,0.6); }

    button:hover { transform: scale(1.1); }

    #loveMessage {
        display: none;
        font-size: 2.5rem;
